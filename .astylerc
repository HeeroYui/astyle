# No backup files
--suffix=none

--exclude="build"
--exclude="bundle_dependencies"
--ignore-exclude-errors-x

--style=allman
--indent-namespaces
--pad-header
--unpad-paren
--convert-tabs
--indent=spaces=4
--indent-preproc-block
--align-pointer=type
--align-reference=type
--attach-extern-c

--keep-one-line-blocks
--keep-one-line-statements
--min-conditional-indent=0
--max-instatement-indent=50

--max-code-length=80
--break-after-logical
--lineend=linux